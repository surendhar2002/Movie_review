<div class="container-sm" style="max-width: 50rem">
  <p>
    <strong>Name:</strong>
    <%= @movie.name %>
  </p>

  <p>
    <strong>Release date:</strong>
    <%= @movie.re_date %>
  </p>

  <p>
    <strong>Ratings: </strong>
    <% @ratings.each do |star, count| %>
      <span style="margin: 0 5px">
        <%= "#{star}â­(#{count})" %>
      </span>
    <%end %>
  </p>

  <div style="padding: 10px 0">
    <h3>Add Rating:</h3>
    <% if @rating.persisted? %>
      You gave <%= @rating.star%> Star Rating <%= link_to 'Edit', edit_movie_rating_path(@movie,@rating)%>
    <%else %>
      <%= render 'ratings/form'%>
    <%end%>
  </div>

  <hr>
  <%= render "reviews/reviews" %>
  <hr>
  <h1>Add Reviews</h1>
  <%= render "reviews/form" %>

  <%= link_to 'Edit', edit_movie_path(@movie) if can? :manage, @movie %> |
  <%= link_to 'Back', movies_path %>

</div>

